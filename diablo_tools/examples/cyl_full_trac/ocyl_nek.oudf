void velocityDirichletConditions(bcData *bc)
{
  if (bc->id==1)
  {
    bc->u = 1.0;
    bc->v = 0.0;
    bc->w = 0.0;
  }
  else
  {
    bc->u = bc->usrwrk[bc->idM + 1*bc->fieldOffset];
    bc->v = bc->usrwrk[bc->idM + 2*bc->fieldOffset];
    bc->w = bc->usrwrk[bc->idM + 3*bc->fieldOffset];

  }
}

