// Boundary conditions
/* inflow 1, outflow 2, wall 3 */
void velocityDirichletConditions(bcData *bc)
{
//  if (bc->id == 1)

  bc->u = 1;

  bc->v = 0.0;
  bc->w = 0.0;
}

void scalarDirichletConditions(bcData * bc)
{
  if (bc->id == 1)
  {

    const dfloat sigm = 0.6
    const dfloat yp0  = 60.0

    const dfloat fact = exp(-log10(yplus/yp0)**2/(2.0*sigm**2))

    if(bc->scalarId == 1) bc->s = 0.00375;  // k

    if(bc->scalarId == 2) bc->s = 0.0;      // tau
  }
}
